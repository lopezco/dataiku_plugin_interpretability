            "acceptsDataset": true
        },
        {
            "name": "Model",
            "label": "Model",
            "description": "Tree-based model to explain",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": false,
			"acceptsSavedModel": true
            // ,'mustBeSQL': true
            // ,'mustBeStrictlyType':'HDFS'
        }
        // ...
    ],

    "outputRoles" : [
        {
            "name": "Shap_values",
            "label": "Shap values",
